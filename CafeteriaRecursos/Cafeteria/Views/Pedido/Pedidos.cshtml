@model List<Cafe>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Pedidos";
}


<div class="row justify-content-center text-center">
    <h1 class="display-4">Nuestros Productos</h1>
    <p>Bienvenido a la sección de productos de nuestra cafetería.</p>
    <p>Explora nuestra variedad de productos y elige tus favoritos.</p>
</div>

<div class="row justify-content-md-center text-center seccion-productos">
    @foreach (var cafe in Model)
    {
        <div class="col-md-3 productos bg-white">
            <h3>@cafe.Nombre</h3>
            <p>@cafe.Descripcion</p>
            <span>S/. @cafe.Precio</span>
            <form asp-action="AgregarPedido" method="post">
                <input type="hidden" name="nombreCafe" value="@cafe.Nombre" class="btn btn-ver-mas" />
                <button type="submit" class="btn btn-success">Agregar al pedido</button>
            </form>
        </div>
    }
</div>






